# HR Attrition Predictor - Environment Variables Template
# =====================================================
# Copy this file to .env and customize the values

# ================================================================
# APPLICATION SETTINGS
# ================================================================

APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO
VERSION=2.0
BUILD_DATE=2025-09-13
VCS_REF=latest

# Ports
APP_PORT=8501
HTTP_PORT=80
HTTPS_PORT=443
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ================================================================
# SECURITY CONFIGURATION
# ================================================================

# Change these in production!
SECRET_KEY=your-super-secret-key-change-in-production-please-make-it-long-and-random
ADMIN_PASSWORD=Change_This_Admin_Password_123!
JWT_SECRET=jwt-secret-key-should-be-long-and-random
ENCRYPTION_KEY=32-character-encryption-key-here

# ================================================================
# DATABASE CONFIGURATION
# ================================================================

POSTGRES_DB=hr_predictor
POSTGRES_USER=hr_user
POSTGRES_PASSWORD=SecurePassword123!ChangeMePlease
DB_POOL_SIZE=10

# Performance tuning
PG_SHARED_BUFFERS=256MB
PG_EFFECTIVE_CACHE_SIZE=1GB
PG_WORK_MEM=4MB
PG_MAINTENANCE_WORK_MEM=64MB
PG_CPU_LIMIT=1.0
PG_MEMORY_LIMIT=1G

# ================================================================
# REDIS CONFIGURATION
# ================================================================

REDIS_PASSWORD=SecureRedisPassword123
REDIS_DB=0
REDIS_MAX_MEMORY=512mb
REDIS_MEMORY_LIMIT=1G

# ================================================================
# EMAIL CONFIGURATION
# ================================================================

# Gmail example (use app-specific password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
EMAIL_FROM=hr-system@company.com

# ================================================================
# ML MODEL CONFIGURATION
# ================================================================

MODEL_CACHE_SIZE=100
PREDICTION_BATCH_SIZE=1000
AUTO_RETRAIN=false
DRIFT_THRESHOLD=0.1

# ================================================================
# FEATURE FLAGS
# ================================================================

ENABLE_SYNTHETIC_DATA=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_MODEL_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_CORS=false

# ================================================================
# SYSTEM CONFIGURATION
# ================================================================

TIMEZONE=Asia/Kolkata
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Resource limits
CPU_LIMIT=2.0
MEMORY_LIMIT=4G
CPU_RESERVATION=1.0
MEMORY_RESERVATION=2G

# ================================================================
# NGINX CONFIGURATION
# ================================================================

NGINX_WORKERS=auto
NGINX_CONNECTIONS=1024

# ================================================================
# MONITORING CONFIGURATION
# ================================================================

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=ChangeThisGrafanaPassword123
GRAFANA_URL=http://localhost:3000

# Prometheus
PROMETHEUS_RETENTION=30d

# ELK Stack (optional)
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ================================================================
# BACKUP CONFIGURATION
# ================================================================

BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ================================================================
# SSL/TLS CONFIGURATION (for production)
# ================================================================

# Domain for SSL certificates
DOMAIN_NAME=hr-predictor.company.com
SSL_EMAIL=admin@company.com

# Let's Encrypt staging (set to false for production)
LETSENCRYPT_STAGING=true
